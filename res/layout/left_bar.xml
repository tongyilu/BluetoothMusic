<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/calllogs_layout"
            android:layout_width="171dp"
            android:layout_height="68dp"
            android:background="@drawable/bluetooth_tonghua"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/calllogs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dip"
                android:text="通话记录"
                android:textColor="@color/gray_d3"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/contacts_layout"
           android:layout_width="171dp"
            android:layout_height="68dp"
            android:background="@drawable/bluetooth_dianhuabo"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/contacts_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话本"
                android:textColor="@color/gray_d3"
                android:layout_marginLeft="65dip"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       android:layout_marginBottom="8dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/redial_layout"
             android:layout_width="171dp"
            android:layout_height="68dp"
            android:background="@drawable/bluetooth_bohaojianpan"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/redial_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dip"
                android:text="拨号键盘"
                android:textColor="@color/orange"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/music_layout_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/music_layout"
             android:layout_width="171dp"
            android:layout_height="68dp"
            android:background="@drawable/bluetooth_yinyue"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dip"
                android:text="蓝牙音乐"
                android:textColor="@color/gray_d3"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/bluetooth_layout"
            android:layout_width="171dp"
            android:layout_height="68dp"
            android:background="@drawable/bluetooth_duankai"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/bluetooth_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dip"
                android:text="断开连接"
                android:textColor="@drawable/button_font_style"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>