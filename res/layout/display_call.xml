<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_05"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@anim/call_anim" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:textSize="40sp" />

    <com.spreadwin.btc.view.DilatingDotsProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:radius="6dp"
        app:dd_animationDuration="500"
        app:dd_horizontalSpacing="8dp"
        app:dd_numDots="6"
        app:dd_scaleMultiplier="1.5"
        android:color="@color/blue" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mdropped_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:src="@drawable/bluetooth_dropped" />

        <TextView
            android:id="@+id/mute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/mute_u"
            android:gravity="center"
            android:text="@string/mute"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_25" />

        <ImageView
            android:id="@+id/mdial_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:src="@drawable/bluetooth_dial" />

        <TextView
            android:id="@+id/hf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/handsfree_u"
            android:gravity="center"
            android:text="@string/hf"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_25"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>