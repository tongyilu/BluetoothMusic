<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/call_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="#1affffff" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">
            
	        <ImageView
	            android:id="@+id/bt_contacts"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@android:color/transparent"
	            android:scaleType="centerInside"
                android:layout_marginLeft="12dip"
	            android:src="@drawable/bt_contacts" />

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="26dip"
	            android:textColor="@color/white"
	            android:textSize="24sp"
	            android:text="电话簿"/>
        </LinearLayout>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="36sp" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:layout_marginRight="26dip"
                android:src="@drawable/bt_keyboard" />
            <TextView
                android:id="@+id/checkout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:layout_marginRight="12dip"
                android:textSize="24sp"
                android:text="显示键盘"/>
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/layout_dial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >
        android:background="#f00"

        <include 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            layout="@layout/input_layout"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_checkout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <com.spreadwin.btc.view.RippleBackground
                android:id="@+id/content"
                android:layout_width="154dp"
                android:layout_height="154dp"
                android:gravity="center"
                app:rb_color="#0099CC"
                app:rb_duration="4000"
                app:rb_radius="12dp"
                app:rb_rippleAmount="5"
                app:rb_scale="5" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_1" />
            </com.spreadwin.btc.view.RippleBackground>



            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/call_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format="%s"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:visibility="gone" />

            <com.spreadwin.btc.view.DilatingDotsProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:radius="6dp"
                android:visibility="gone"
                app:dd_horizontalSpacing="8dp"
                app:dd_numDots="6"
                app:dd_scaleMultiplier="1.5"
                android:color="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            
            <LinearLayout
	            android:id="@+id/menu_layout"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_marginBottom="50dip"
	            android:orientation="horizontal" >

	           <ImageView
	                android:layout_width="68dp"
	                android:layout_height="68dp"
	                android:layout_weight="1"
	                android:visibility="invisible" />
	                         
	            <ImageView
	                android:id="@+id/car_switch"
	                android:layout_width="68dp"
	                android:layout_height="68dp"
	                android:layout_weight="1"
	                android:src="@drawable/keyboard_u"
	                android:visibility="gone" />

	            <ImageView
	                android:id="@+id/image_switch"
	                android:layout_width="68dp"
	                android:layout_height="68dp"
	                android:layout_weight="1"
	                android:src="@drawable/switching_02" />
	            
	            <ImageView
	                android:id="@+id/mute"
	                android:layout_width="68dp"
	                android:layout_height="68dp"
	                android:layout_weight="1"
	                android:visibility="gone" 
	                android:src="@drawable/mute_d" />
	    
	            
	             <ImageView
	                android:layout_width="68dp"
	                android:layout_height="68dp"
	                android:layout_weight="1"
	                android:visibility="invisible" />
	        </LinearLayout>
	        
            
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center"
	            >
	             
	            <ImageView
	                android:layout_width="68dp"
	                android:layout_height="68dp"
	                android:layout_weight="1"
	                android:visibility="invisible" />
	               
	            <ImageView
	                android:id="@+id/dropped2_button"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="2"
	                android:src="@drawable/bluetooth_dropped_2" />
	                       
	            <ImageView
	                android:id="@+id/dial2_button"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="2"
	                android:src="@drawable/bluetooth_dial_2"/>
	                android:visibility="gone"
	                                
	            <ImageView
	                android:layout_width="68dp"
	                android:layout_height="68dp"
	                android:layout_weight="1"
	                android:visibility="invisible" />
	        </LinearLayout>
            
        </LinearLayout>
        
        
    </LinearLayout>

</LinearLayout>