<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/call_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_05"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layout_dial"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/input_bg"
            android:orientation="horizontal" >

            <HorizontalScrollView
                android:id="@+id/scroollview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:scrollbars="none" >

                <TextView
                    android:id="@+id/input_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:src="@drawable/bluetooth_delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/number_1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_1" />

                <ImageButton
                    android:id="@+id/number_2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_2" />

                <ImageButton
                    android:id="@+id/number_3"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/number_4"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_4" />

                <ImageButton
                    android:id="@+id/number_5"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_5" />

                <ImageButton
                    android:id="@+id/number_6"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/number_7"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_7" />

                <ImageButton
                    android:id="@+id/number_8"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_8" />

                <ImageButton
                    android:id="@+id/number_9"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/number_jin"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_jin" />

                <ImageButton
                    android:id="@+id/number_0"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_0" />

                <ImageButton
                    android:id="@+id/number_xing"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bluetooth_number_xing" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <com.spreadwin.btc.view.RippleBackground
                android:id="@+id/content"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                app:rb_color="#0099CC"
                app:rb_duration="4000"
                app:rb_radius="9dp"
                app:rb_rippleAmount="5"
                app:rb_scale="5" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_1" />
            </com.spreadwin.btc.view.RippleBackground>

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/call_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format="%s"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.spreadwin.btc.view.DilatingDotsProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:radius="6dp"
                android:visibility="gone"
                app:dd_horizontalSpacing="8dp"
                app:dd_numDots="6"
                app:dd_scaleMultiplier="1.5"
                android:color="@color/blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/checkout"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/keyboard_u"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_switch"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/switching_02" />

            <ImageView
                android:id="@+id/mdropped_button"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/bluetooth_dropped" />

            <ImageView
                android:id="@+id/mute"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/mute_d" />

            <ImageView
                android:id="@+id/mdial_button"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/bluetooth_dial"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>