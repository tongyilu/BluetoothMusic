<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center">

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="569dip"
        android:layout_height="45dp"
        android:orientation="horizontal" >
        android:background="@drawable/input_bg"

        <HorizontalScrollView
            android:id="@+id/scroollview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:scrollbars="none" >

            <TextView
                android:id="@+id/input_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:src="@drawable/bluetooth_delete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="569dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/number_1"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginRight="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_1" />

            <ImageButton
                android:id="@+id/number_2"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginLeft="@dimen/numberMargin"
                android:layout_marginRight="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_2" />

            <ImageButton
                android:id="@+id/number_3"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginLeft="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/number_4"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginRight="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_4" />

            <ImageButton
                android:id="@+id/number_5"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginLeft="@dimen/numberMargin"
                android:layout_marginRight="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_5" />

            <ImageButton
                android:id="@+id/number_6"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginLeft="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/number_7"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginRight="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_7" />

            <ImageButton
                android:id="@+id/number_8"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginLeft="@dimen/numberMargin"
                android:layout_marginRight="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_8" />

            <ImageButton
                android:id="@+id/number_9"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginLeft="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/number_jin"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginRight="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_jin" />

            <ImageButton
                android:id="@+id/number_0"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginLeft="@dimen/numberMargin"
                android:layout_marginRight="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_0" />

            <ImageButton
                android:id="@+id/number_xing"
                android:layout_width="@dimen/input_number_Width"
                android:layout_height="@dimen/input_number_Height"
                android:layout_marginLeft="@dimen/numberMargin"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:scaleType="centerInside"
                android:src="@drawable/bluetooth_number_xing" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/intput_dropped_button"
        android:layout_width="@dimen/input_number_Width"
        android:layout_height="@dimen/input_number_Height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dip"
        android:background="@drawable/bluetooth_dropped"
        android:scaleType="centerInside"
        android:src="@drawable/bt_droped" />

</LinearLayout>